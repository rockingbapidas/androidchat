<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ########################### for toolbar ################################### -->

    <style name="toolbarStyle">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:maxHeight" tools:ignore="PrivateResource">@dimen/abc_action_bar_default_height_material</item>
    </style>

    <style name="SubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <!-- ########################### for Text Style ################################### -->

    <style name="roboto_light">
        <item name="fontFamily">roboto</item>
        <item name="typeface">roboto_light</item>
    </style>

    <style name="text" parent="roboto_light">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="roboto_regular">
        <item name="fontFamily">roboto</item>
        <item name="typeface">roboto_regular</item>
    </style>

    <style name="text.title" parent="roboto_regular">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/header_color</item>
    </style>

    <style name="text.subTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- ########################### for Edit text ################################### -->

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">

    </style>

    <style name="materialEdit" parent="EditTextStyle">
        <item name="met_bottomTextSize">@dimen/text14</item>
        <item name="android:gravity">center</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelAnimating">true</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="met_floatingLabelTextSize">@dimen/text15</item>
        <item name="met_primaryColor">?attr/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="met_textColor">@color/white</item>
        <item name="met_textColorHint">@color/white</item>
    </style>

    <!-- ########################### for Ripple ################################### -->

    <style name="RippleStyle">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyle.White">
        <item name="mrl_rippleColor">@color/white80</item>
    </style>

    <style name="RippleStyle.Light">
        <item name="mrl_rippleColor">@color/light_color</item>
    </style>

    <style name="profileHeader" parent="roboto_regular">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="profileSubheader" parent="roboto_regular">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>
</resources>
