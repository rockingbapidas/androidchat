<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyle.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/sub_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center|start"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ic_account_circle_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:gravity="center|start"
                android:orientation="vertical">

                <com.bapidas.chattingapp.ui.widget.roboto.RobotoTextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Bapi Das"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    app:fontFamily="roboto"
                    app:typeface="roboto_regular" />

                <com.bapidas.chattingapp.ui.widget.roboto.RobotoTextView
                    android:id="@+id/email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="1457894125632"
                    android:textColor="@color/colorOrange"
                    android:textSize="14sp"
                    app:fontFamily="roboto"
                    app:typeface="roboto_regular" />

                <com.bapidas.chattingapp.ui.widget.roboto.RobotoTextView
                    android:id="@+id/last_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="Hii dere"
                    android:textColor="@color/colorLightBlue"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:fontFamily="roboto"
                    app:typeface="roboto_condensed_regular" />

                <LinearLayout
                    android:id="@+id/lastImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_camera_alt_black_24dp" />

                    <com.bapidas.chattingapp.ui.widget.roboto.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:maxLines="1"
                        android:text="Photo"
                        android:textColor="@color/colorLightBlue"
                        android:textSize="14sp"
                        android:visibility="visible"
                        app:fontFamily="roboto"
                        app:typeface="roboto_condensed_regular" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>

